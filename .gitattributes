# Auto detect text files and perform LF normalization
* text=auto

# Source code files
*.cs text diff=csharp
*.ts text diff=typescript
*.tsx text diff=typescript
*.js text diff=javascript
*.jsx text diff=javascript
*.json text diff=json
*.yml text diff=yaml
*.yaml text diff=yaml
*.md text diff=markdown

# Configuration files
*.gitattributes text
*.gitignore text
.editorconfig text
.prettierrc text
.prettierrc.* text

# Build and package files
*.dll binary
*.exe binary
*.pdb binary
*.so binary
*.dylib binary
*.a binary
*.lib binary

# Image and media files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.svg binary
*.ico binary
*.webp binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.7z binary

# Fonts
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
*.eot binary

# Certificates and keys
*.pem binary
*.key binary
*.crt binary
*.cer binary
*.p12 binary
*.pfx binary

# Lock files
package-lock.json text eol=lf
pnpm-lock.yaml text eol=lf
yarn.lock text eol=lf
